<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uta.utacarrental">
    <!-- 用于连接SQLiteStudio -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.admin.RevokeUser"></activity>
        <activity android:name=".view.profile.UpdateProfile" />
        <activity android:name=".view.view_my_reservations.ViewMyReservations" />
        <activity android:name=".view.reservation.ModifyReservationActivity" />
        <activity android:name=".view.UserCarSummary.UserCarSummary" />
        <activity android:name=".view.view_car_details.ViewCarDetails" />
        <activity
            android:name=".view.reservation.ReservationDetailActivity"
            android:label="Reservation Detail"
            android:theme="@style/ReservationDetailAppTheme" />
        <activity
            android:name=".view.homepage.UserHomepage"
            android:label="@string/title_activity_user_homepage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.homepage.RMHomepage"
            android:label="RMHomepage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.homepage.AdminHomepage"
            android:label="AdminHomepage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.common.Register"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".view.common.ChangePasswordScreen" />
        <activity android:name=".view.common.ForgotPasswordScreen" />
        <activity
            android:name=".view.common.DisplayMessageActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".view.search_for_car.SearchForCar"
            android:parentActivityName=".view.homepage.RMHomepage" />
        <activity
            android:name=".view.show_car_details.CarDetails"
            android:parentActivityName=".view.search_for_car.SearchForCar" />
        <activity
            android:name=".view.admin.ViewSelectedUsers"
            android:label="ViewSelectedUsersPage"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>